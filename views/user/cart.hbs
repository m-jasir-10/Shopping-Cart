<section>
    <div class="container">
        <div class="row">
            <table class="table table-bordered mt-5">
                <thead>
                    <tr>
                        <th scope="col">No</th>
                        <th scope="col">Item</th>
                        <th scope="col">Name</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Price</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each products}}
                    <tr>
                        <th scope=" row">{{ increment @index}}</th>
                        <td><img src="{{this.product.image}}" alt="" width="100px" height="auto"></td>
                        <td>{{this.product.name}}</td>
                        <td>RS: {{this.product.price}}</td>
                        <td>
                            <button class="btn btn-secondary me-3"
                                onclick="changeQuantity('{{this._id}}', '{{this.product._id}}', -1)">-</button>
                            <span id="{{this.product._id}}">{{this.quantity}}</span>
                            <button class="btn btn-secondary ms-3"
                                onclick="changeQuantity('{{this._id}}', '{{this.product._id}}', 1)">+</button>
                        </td>
                        <td>
                            <button class="btn btn-danger" onclick="removeProductFromCart('{{this._id}}', '{{this.product._id}}')">Remove</button>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</section>