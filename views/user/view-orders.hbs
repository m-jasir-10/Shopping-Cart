<section>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-12">
                {{#if orders}}
                <h1 class="text-center mb-5">Order Details ( {{ordersCount}} )</h1>
                {{#each orders}}
                <div class="card mb-5">
                    <div class="card-header">
                        <h5 class="mb-2"><strong>Order ID:</strong> {{this._id}}</h5>
                        <p class="mb-2"><strong>Date:</strong> {{this.orderDate}}</p>
                        <p><strong>Time:</strong> {{this.orderTime}}</p>
                    </div>
                    <div class="card-body">
                        <h5 class="mb-4">Products:</h5>
                        <div class="table-responsive">
                            <table class="table table-bordered text-center">
                                <thead>
                                    <tr>
                                        <th>Image</th>
                                        <th>Name</th>
                                        <th>Quantity</th>
                                        <th>Price</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each this.products}}
                                    <tr>
                                        <td><img src="{{this.image}}" alt="{{this.name}}" width="75px" height="auto">
                                        </td>
                                        <td>{{this.name}}</td>
                                        <td>{{this.quantity}}</td>
                                        <td>₹ {{this.price}}</td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                        <div class="row text-center mt-4">
                            <div class="col-md-4 fs-4 mb-3"><strong>Total Amount:</strong> ₹ {{this.totalPrice}}</div>
                            <div class="col-md-4 fs-4 mb-3"><strong>Payment Method:</strong> {{this.paymentMethod}}</div>
                            <div class="col-md-4 fs-4 mb-3 order-status"><strong>Status:</strong> {{this.orderStatus}}</div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <h5 class="mb-4 mt-2">Delivery Address:</h5>
                        <table class="table table-bordered">
                            <tbody>
                                <tr>
                                    <th>Address:</th>
                                    <td>{{this.deliveryDetails.address}}</td>
                                </tr>
                                <tr>
                                    <th>City:</th>
                                    <td>{{this.deliveryDetails.city}}</td>
                                </tr>
                                <tr>
                                    <th>State:</th>
                                    <td>{{this.deliveryDetails.state}}</td>
                                </tr>
                                <tr>
                                    <th>Country:</th>
                                    <td>{{this.deliveryDetails.country}}</td>
                                </tr>
                                <tr>
                                    <th>Pincode:</th>
                                    <td>{{this.deliveryDetails.pincode}}</td>
                                </tr>
                                <tr>
                                    <th>Email:</th>
                                    <td>{{this.email}}</td>
                                </tr>
                                <tr>
                                    <th>Mobile:</th>
                                    <td>{{this.deliveryDetails.mobile}}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                {{/each}}
                {{else}}
                <div class="col-md-12 mt-5">
                    <div data-aos="fade-down" class="card text-center p-4" style="width: auto;">
                        <h1 class="text-danger text-center mb-3 mt-5"><strong>Order details are not found...</strong>
                        </h1>
                        <p class="text-center text-warning mt-3 fs-4 mb-3">Please place an order first</p>
                        <div class="text-center mb-5 mt-2">
                            <a href="/" class=" btn btn-primary me-3"><strong>Add products</strong></a>
                            <a href="/cart" class="btn btn-secondary ps-3 pe-3"><strong>View cart</strong></a>
                        </div>
                    </div>
                </div>
                {{/if}}
            </div>
        </div>
    </div>
</section>

<style>
    .card-header {
        border-bottom: 1px solid #e9ecef;
    }

    .table th,
    .table td {
        vertical-align: middle;
    }

    .order-status {
        text-transform: capitalize;
    }
</style>