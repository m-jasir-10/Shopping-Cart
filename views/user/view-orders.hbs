<section>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-12">
                <h2 class="text-center mb-4">Order Details</h2>
                {{#if orders}}
                {{#each orders}}
                <div class="card mb-5">
                    <div class="card-header">
                        <h5><strong>Order ID:</strong> {{this._id}}</h5>
                        <p><strong>Date:</strong> {{this.orderDate}}</p>
                        <p><strong>Time:</strong> {{this.orderTime}}</p>
                    </div>
                    <div class="card-body">
                        <h5>Products:</h5>
                        <div class="table-responsive">
                            <table class="table table-bordered text-center">
                                <thead>
                                    <tr>
                                        <th>Image</th>
                                        <th>Product Name</th>
                                        <th>Quantity</th>
                                        <th>Price</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each this.products}}
                                    <tr>
                                        <td><img src="{{this.image}}" alt="{{this.name}}" width="75px" height="auto"></td>
                                        <td>{{this.name}}</td>
                                        <td>{{this.quantity}}</td>
                                        <td>{{this.price}}</td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                        <div class="row text-center mt-4">
                            <div class="col-md-4"><strong>Total Amount:</strong> Rs {{this.totalPrice}}</div>
                            <div class="col-md-4"><strong>Payment Method:</strong> {{this.paymentMethod}}</div>
                            <div class="col-md-4"><strong>Status:</strong> {{this.status}}</div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <h5>Delivery Address:</h5>
                        <table class="table table-bordered">
                            <tbody>
                                <tr>
                                    <th>Name:</th>
                                    <td>{{this.name}}</td>
                                </tr>
                                <tr>
                                    <th>Address:</th>
                                    <td>{{this.deliveryDetails.address}}</td>
                                </tr>
                                <tr>
                                    <th>City:</th>
                                    <td>{{this.deliveryDetails.city}}</td>
                                </tr>
                                <tr>
                                    <th>State:</th>
                                    <td>{{this.deliveryDetails.state}}</td>
                                </tr>
                                <tr>
                                    <th>Country:</th>
                                    <td>{{this.deliveryDetails.country}}</td>
                                </tr>
                                <tr>
                                    <th>Pincode:</th>
                                    <td>{{this.deliveryDetails.pincode}}</td>
                                </tr>
                                <tr>
                                    <th>Mobile:</th>
                                    <td>{{this.deliveryDetails.mobile}}</td>
                                </tr>
                                <tr>
                                    <th>Email:</th>
                                    <td>{{this.email}}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                {{/each}}
                {{else}}
                <p class="text-center text-danger">Order details not found.</p>
                {{/if}}
            </div>
        </div>
    </div>
</section>